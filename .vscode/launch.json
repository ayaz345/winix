    "version": "0.2.0",
    "configurations": [
        {
            "name": "File System Run fsutil",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fsutil",
            "args": ["-t", "2048", "-o", "include/disk.c", "-s", "include/srec"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "GCC Build fsutil",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Run Unit Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/unittest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "GCC Build unittest",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}